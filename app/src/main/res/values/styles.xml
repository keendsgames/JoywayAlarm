<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>
    
    

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>


    
     <!-- 网络请求弹出dialog -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>
    
      <!-- 设置错误信息dialog弹出，退出动画 -->
    <style name="messagedialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/down_in</item>
        <item name="android:windowExitAnimation">@anim/up_out</item>
    </style>

    <!-- 透明横线值 -->
    <style name="lineView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.6dp</item>
        <item name="android:background">@color/color_334145</item>
    </style>

    <!-- 透明横线值 -->
    <style name="settings_lineView2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.6dp</item>
        <item name="android:background">#868383</item>
    </style>
    

    <!-- 透明横线值 -->
    <style name="settings_lineView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:background">#a7a6a6</item>
    </style>

    <!-- 透明横线值 -->
    <style name="settings_lineView_veril">
        <item name="android:layout_width">0.3dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_3c3c3c</item>
    </style>

    <!-- 透明横线值 -->
    <style name="horizontal_lineView">
        <item name="android:layout_width">0.3dip</item>
        <item name="android:layout_height">17dip</item>
        <item name="android:background">@color/color_FFFFFF</item>
    </style>

    <style name="SingleLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/single_line_height</item>
        <item name="android:background">#c8c8c8</item>
    </style>

    <style name="SingleVerticalLineStyle">
        <item name="android:layout_width">@dimen/single_line_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#c8c8c8</item>
    </style>
    
   <!-- 自定义提示框 -->
    <style name="public_dialog_style" parent="@android:Theme.Dialog" tools:ignore="ResourceCycle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--dialog设置-->
    <style name="my_dialog" parent="@android:style/Theme.Dialog">
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否显示title-->
        <item name="android:windowNoTitle">false</item>
        <!--设置dialog的背景，（#00000000）-->
        <item name="android:background">@android:color/transparent</item>
        <!--显示区域背景是否透明，（#00000000）-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5-->
        <item name="android:backgroundDimAmount">0.6</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--dialog从底部弹出的动画-->
    <style name="dialog_bottom_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_bottom_enter</item>
        <!-- 进入时的动画 -->
        <item name="@android:windowExitAnimation">@anim/dialog_bottom_exit</item>
        <!-- 退出时的动画 -->
    </style>
    
    

</resources>